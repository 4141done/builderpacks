#!/usr/bin/env ruby

# Start OUP Content
system <<-SH
  set -e

  BUILD_DIR=$1
  CACHE_DIR=$2

  IMAGE_PROC_VM_BINARY="https://s3.amazonaws.com/oup-heroku-buildpacks/imgproc.tar.gz"
  IMAGE_PROC_VM_VENDOR="vendor/imgproc"
  FILE_NAME="imgproc.tar.gz"

  # See if we have a cached copy of the binaries already
  mkdir -p $CACHE_DIR
  if ! [ -e $CACHE_DIR/$FILE_NAME ]; then
    echo "----> Fetching image processing libraries..."
    curl $IMAGE_PROC_VM_BINARY -s -o $CACHE_DIR/$FILE_NAME
  fi

  # extract to vender/imgproc
  echo "Extracting image processing libraries..."
  mkdir -p $BUILD_DIR/$IMAGE_PROC_VM_VENDOR
  tar zxf $CACHE_DIR/$FILE_NAME -C $BUILD_DIR/$IMAGE_PROC_VM_VENDOR
SH

# sync output
$stdout.sync = true

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"

if pack = LanguagePack.detect(ARGV[0], ARGV[1])
  pack.log("compile") do
    pack.compile
  end
end